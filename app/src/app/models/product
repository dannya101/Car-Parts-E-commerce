from sqlalchemy import Integer, String, Float, Column, ForeignKey

from app.core.database import Base


class Product(Base):
    __tablename__ = "products"

    id = Column(Integer, primary_key=True, index=True)
    name = Column(String, unique=True, index=True)
    description = Column(String)
    price = Column(Float)
    part_category_id = Column(Integer, ForeignKey("part_categories.id"), nullable=False)
    brand_category_id = Column(Integer, ForeignKey("brand_categories.id"), nullable=False)
    tags = Column(String)
    images = Column(String)
    thumbnail = Column(String)
